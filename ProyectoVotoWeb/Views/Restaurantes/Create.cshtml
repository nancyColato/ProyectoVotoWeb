@model ProyectoVotoWeb.Models.tblRestaurantes

@{
    ViewData["Title"] = "Create";
}

    <div class=" col-md-6 offset-md-3 col-sm-9 offset-sm-1">
        <div class="card">
            <div class="card-header bg-success">
                <h5 class="card-title text-center">Crear Restaurante</h5>
            </div>
            <div class="card-body">

                <div class="row">
                    <form asp-action="Create" class="col-sm-9 col-md-9 offset-sm-1 offset-md-1" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NombreRestaurante" class="control-label"></label>
                            <input asp-for="NombreRestaurante" class="form-control" />
                            <span asp-validation-for="NombreRestaurante" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Decripcion" class="control-label"></label>
                            <textarea asp-for="Decripcion" class="form-control"></textarea>
                            <span asp-validation-for="Decripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label  asp-for="Logo"  class="control-label"></label>
                            <input asp-for="Logo"  type="file" accept="image/jpg" class="form-control" placeholder=".jpg"/>
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label  asp-for="ImgDestacada" class="control-label"></label>
                            <input  asp-for="ImgDestacada" type="file" accept="image/jpg" class="form-control" placeholder=".jpg" />
                            <span asp-validation-for="ImgDestacada" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <hr />
                            <input type="submit" value="Agregar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-warning">Regresar!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
