@model ProyectoVotoWeb.Models.tblRestaurantes

@{
    ViewData["Title"] = "Details";
}

<div class=" col-md-6 offset-md-3 col-sm-9 col-sm-1">
    <div class="card">
        <div class="card-header bg-warning">
            <h3 class="card-title text-center">Detalles Restaurante</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-5 col-md-4">
                    @Html.DisplayNameFor(model => model.NombreRestaurante)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.NombreRestaurante)
                </dd>
                <dt class="col-sm-5 col-md-4">
                    @Html.DisplayNameFor(model => model.Decripcion)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Decripcion)
                </dd>
                <dt class="col-sm-5 col-md-4">
                    @Html.DisplayNameFor(model => model.Logo)
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Logo)
                </dd>
                <dt class="col-sm-5 col-md-4">
                    @Html.DisplayNameFor(model => model.ImgDestacada)
                </dt>
                <dd class="col-sm-">
                    @Html.DisplayFor(model => model.ImgDestacada)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.IdRestaurante" class="btn btn-outline-primary">Editar</a> |
            <a asp-action="Index" class="btn btn-warning">Regresar!</a>
        </div>
    </div>
</div>
