@model ProyectoVotoWeb.Models.tblHorarios

@{
    ViewData["Title"] = "Create";
}

    <div class="col-sm-9 col-md-6 offset-sm-1 offset-md-3">
        <div class="card">
            <div class="card-header bg-success">
                <h5 class="card-title text-center">Crear Restaurante</h5>
            </div>
            <div class="card-body">

                <div class="row">
                    <form asp-action="Create" class="col-sm-9 col-md-9 offset-sm-1 offset-md-1">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="HoraApertura" class="control-label"></label>
                            <input asp-for="HoraApertura" class="form-control"  placeholder="8:30"/>
                            <span asp-validation-for="HoraApertura" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HoraCierre" class="control-label"></label>
                            <input asp-for="HoraCierre" class="form-control"  placeholder="16:30"/>
                            <span asp-validation-for="HoraCierre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DiaInicio" class="control-label"></label>
                            <input asp-for="DiaInicio" class="form-control"  placeholder="Lunes" />
                            <span asp-validation-for="DiaInicio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DiaFin" class="control-label"></label>
                            <input asp-for="DiaFin" class="form-control"  placeholder="Viernes"/>
                            <span asp-validation-for="DiaFin" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdRestaurante" class="control-label"></label>
                            <select asp-for="IdRestaurante" class="form-control" asp-items="ViewBag.IdRestaurante" ></select>
                            <span asp-validation-for="IdRestaurante" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <hr />
                            <input type="submit" value="Agregar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-warning">Regresar!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

